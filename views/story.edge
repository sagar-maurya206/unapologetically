  <div class="main">
    <div class="section section-basic">
      <div class="container">
        <div class="title">
          <h2 align="center">Story of Survivors(SOS)</h2>
          <br>
          <hr>
          <br>
          <div class="blog_post">
          <h3> Post your own story -> </h3>
          <form action="/story/store" method="POST">
            <div class="form-group">
              <input type="text" name ="title" class="form-control" id="exampleFormControlInput1" placeholder="Title of your story"><br>
              <input type="text" name ="user" class="form-control" id="exampleFormControlInput1" placeholder="Name (leave blank in case you want to remain anonymous"><br>
            <div class="form-group">
                <textarea type="text" name="content" class="form-control" id="exampleFormControlTextarea1" rows="10" placeholder="Write your story here"></textarea>
            </div>
            <button class="btn btn-primary">Tell unapologetically</button>
          </form>
      </div>
        </div>
        <div class="survivors">
          <br><br>
            <h2 align="center">Survivor's Stories</h2><br><br>
            @each(post in posts)
            <div class="blog_post">
                <h3 class="title">{{post.title}}</h3>
                <div class="post">
                <!-- <p>Written by </p><strong>  User</strong><p>on </p><strong>Time</strong> -->
                <pre class="h4">Written by </pre><p class="h4"><strong>{{post.user}}</strong></p><pre class="h4"> created at </pre><p class="h4"><strong>{{post.createdAt.toDateString()}}</strong></p>
                <p></p>
            </div>
            <div>
              <p class="h5">{{post.content}}</p>
            </div>
            </div>
            @endeach
        </div>  
      </div>

    </div>    
